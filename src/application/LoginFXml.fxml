<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: #FFE4C4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.loginController">
	<children>
		<TextField fx:id="lusrtxt" layoutX="27.0" layoutY="128.0" prefHeight="42.0" prefWidth="249.0" promptText="Username">
			<font>
				<Font name="Comic Sans MS" size="20.0" />
			</font>
		</TextField>
		<PasswordField fx:id="lpsw" layoutX="27.0" layoutY="191.0" prefHeight="42.0" prefWidth="249.0" promptText="Password">
			<font>
				<Font name="Comic Sans MS" size="20.0" />
			</font>
		</PasswordField>
		<Label fx:id="lglbl" layoutX="87.0" layoutY="34.0" prefHeight="70.0" prefWidth="129.0" text="Login" textAlignment="RIGHT" textFill="#d7720d">
			<font>
				<Font name="Comic Sans MS" size="48.0" />
			</font>
		</Label>
		<Button fx:id="lgbtn" layoutX="113.0" layoutY="244.0" mnemonicParsing="false" onAction="#Login" style="-fx-background-color: #DEB887;" text="Login">
			<font>
				<Font name="Comic Sans MS Bold" size="20.0" />
			</font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
		</Button>
	</children>
</AnchorPane>
